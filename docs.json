{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Influship API",
  "colors": {
    "primary": "#8B5CF6",
    "light": "#A78BFA",
    "dark": "#7C3AED"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Getting Started",
        "groups": [
          {
            "group": "Introduction",
            "pages": ["index", "quickstart", "implementation-status"]
          },
          {
            "group": "Authentication",
            "pages": ["guides/authentication", "guides/api-keys"]
          },
          {
            "group": "Rate Limits & Billing",
            "pages": ["guides/rate-limits", "guides/billing"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/data-formats"
            ]
          },
          {
            "group": "Endpoints",
            "openapi": "https://api.influship.com/openapi.yaml"
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Tutorials",
            "pages": [
              "guides/finding-influencers",
              "guides/analyzing-content",
              "guides/brand-safety-check"
            ]
          },
          {
            "group": "Code Examples",
            "pages": ["examples/javascript", "examples/python", "examples/curl"]
          },
          {
            "group": "Best Practices",
            "pages": [
              "guides/error-handling",
              "guides/performance-optimization",
              "guides/webhook-integration"
            ]
          }
        ]
      },
      {
        "tab": "Resources",
        "groups": [
          {
            "group": "Support",
            "pages": [
              "support/faq",
              "support/troubleshooting",
              "support/contact"
            ]
          },
          {
            "group": "Changelog",
            "pages": ["changelog/releases", "changelog/roadmap"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "API Status",
          "href": "https://status.influship.com",
          "icon": "chart-line"
        },
        {
          "anchor": "Dashboard",
          "href": "https://dashboard.influship.com",
          "icon": "chart-bar"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@influship.com",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Status",
        "href": "https://status.influship.com"
      },
      {
        "label": "Support",
        "href": "mailto:support@influship.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://dashboard.influship.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/influship",
      "github": "https://github.com/influship",
